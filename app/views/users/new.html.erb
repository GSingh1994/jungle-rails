<%= form_for :user, url: '/users' do |f| %>
  <div class="card w-50 p-3 mx-auto mt-5">
  
    <h1 class="text-center">Signup!</h1>
    <div class="card-body">

      <div class="mb-3">
        <%= label_tag  "name_id", "Name:", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= label_tag  "name_id", "Email:",class: "form-label" %>
        <%= f.text_field :email , class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= label_tag  "name_id", "Password:",class: "form-label" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= label_tag  "name_id", "Password Confirmation:",class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <%= f.submit "Submit", class: "btn btn-primary" %>

    </div>
  </div>
<% end %>
