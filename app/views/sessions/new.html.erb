<%= form_tag '/login' do %>
  <div class="card w-50 p-3 mx-auto mt-5">
    <h1 class="text-center">Login</h1>
    <div class="card-body">

      <div class="mb-3">
        <%= label_tag  "name_id", "Email:", class: "form-label" %>
        <%= text_field_tag :email, "", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= label_tag  "name_id", "Password:",class: "form-label" %>
        <%= password_field_tag :password , "", class: "form-control" %>
      </div>

      <%= submit_tag "Submit", class: "btn btn-primary" %>

    </div>
  </div>
<% end %>

