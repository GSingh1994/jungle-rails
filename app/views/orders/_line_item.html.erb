<section class="cart-show mt-4">
    <div class="panel panel-default items">
      <table class="table table-bordered border-success">
        <thead>
          <tr class="bg-success text-light">
            <th colspan="2">Product</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <%  @line_items_detail.each_with_index do |item,index| %>
          <tr>
            <td>
              <%= image_tag item.image.tiny.url %>
            </td>
            <td>
              <h4><%= item.name %></h4>
              <p><%= item.description %></p>
            </td>
            <td>
              <%= @line_items[index].quantity%>
            </td>
            <td>
              <%= humanized_money_with_symbol item.price * (@line_items[index].quantity) %>
            </td>
          </tr>
        <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="1">
              TOTAL:
            </th>
            <td colspan="7">
             <b> <%= humanized_money_with_symbol  @order.total_cents / 100.0 %></b>
            </td>
          </tr>
        </tfoot>
      </table>
      <p>Your Email: <u><%= @order.email %></u> </p>
    </div>
</section>
